/* 水平间距 */
.uni-popup-dialog {
  width: 295px;
  border-radius: 12px;
  background-color: #fff;
}
.uni-dialog-title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 28px;
}
.uni-dialog-title-text {
  font-size: 18px;
  color: #333;
  font-weight: 500;
}
.uni-dialog-content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 20px;
  padding: 32px 12px 32px 28px;
}
.uni-dialog-content-text {
  font-size: 14px;
  color: #333;
}
.uni-dialog-button-group {
  display: flex;
  flex-direction: row;
  border-top-color: #f5f5f5;
  border-top-style: solid;
  border-top-width: 1px;
}
.uni-dialog-button {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 50px;
}
.uni-border-left {
  border-left-color: #f0f0f0;
  border-left-style: solid;
  border-left-width: 1px;
}
.uni-dialog-button-text {
  font-size: 16px;
  color: #828282;
}
.uni-button-color {
  color: #2979ff;
}
.uni-dialog-input {
  flex: 1;
  font-size: 14px;
  border: 1px #eee solid;
  height: 40px;
  padding: 0 10px;
  border-radius: 5px;
  color: #555;
}
.uni-popup__success {
  color: #18bc37;
}
.uni-popup__warn {
  color: #f3a73f;
}
.uni-popup__error {
  color: #e43d33;
}
.uni-popup__info {
  color: #333;
}