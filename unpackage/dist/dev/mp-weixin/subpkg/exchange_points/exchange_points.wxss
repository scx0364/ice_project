/* 水平间距 */
.points_container {
  position: relative;
  z-index: 0;
  background-color: #a6ceff;
  padding-bottom: 96rpx;
}
.points_container .pic_box {
  height: 780rpx;
}
.points_container .pic_box image {
  height: 100%;
}
.points_container .welfare_box {
  position: relative;
  top: -40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #2277ff;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
}
.points_container .welfare_box .blank_mark {
  width: 80rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 49rpx;
}
.points_container .welfare_box .to_get_points {
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-radius: 24rpx;
  width: 718rpx;
  height: 128rpx;
  background-color: #ffffff;
  padding: 24rpx;
  margin-top: 24rpx;
}
.points_container .welfare_box .to_get_points .blank_bg {
  width: 80rpx;
  height: 80rpx;
  background-color: #24b0ff;
  border-radius: 50%;
}
.points_container .welfare_box .to_get_points .points_num_box {
  margin-left: 16rpx;
}
.points_container .welfare_box .to_get_points .points_num {
  font-size: 56rpx;
  color: #447cff;
  font-weight: 700;
}
.points_container .welfare_box .to_get_points .points_text {
  font-size: 24rpx;
  color: #828282;
}
.points_container .welfare_box .to_get_points button {
  position: absolute;
  right: 24rpx;
  display: flex;
  align-items: center;
  width: 172rpx;
  height: 72rpx;
  padding: 0;
  margin: 0;
  background-color: #447cff;
  border-radius: 81rpx;
}
.points_container .welfare_box .to_get_points button image {
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin-left: 12rpx;
  margin-right: 4rpx;
}
.points_container .welfare_box .to_get_points button text {
  display: inline-block;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #fff;
}
.points_container .welfare_box .list_box {
  width: 726rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 28rpx 24rpx;
  margin-top: 24rpx;
  border-radius: 24rpx;
}
.points_container .welfare_box .list_box .list_title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
}
.points_container .welfare_box .list_box .list_item {
  width: 670rpx;
  height: 131rpx;
  display: flex;
  margin-top: 32rpx;
}
.points_container .welfare_box .list_box .list_item:nth-child(1) {
  margin-top: 24rpx;
}
.points_container .welfare_box .list_box .list_item .item_money {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 128rpx;
  height: 122rpx;
  background: linear-gradient(90deg, #FEE6B8, #F8D998 100%);
  border-radius: 12rpx;
  margin-top: 8.5rpx;
}
.points_container .welfare_box .list_box .list_item .item_money .money_box {
  width: 48rpx;
  height: 67rpx;
  margin-top: 8rpx;
}
.points_container .welfare_box .list_box .list_item .item_money .money_box .money_mark {
  font-size: 28rpx;
  color: #8B5121;
}
.points_container .welfare_box .list_box .list_item .item_money .money_box .money_count {
  font-size: 48rpx;
  color: #8B5121;
  font-weight: 700;
}
.points_container .welfare_box .list_box .list_item .item_money .item_name {
  font-size: 24rpx;
  color: #A98854;
}
.points_container .welfare_box .list_box .list_item .item_info {
  position: relative;
  width: 520rpx;
  height: 131rpx;
  margin-left: 22rpx;
}
.points_container .welfare_box .list_box .list_item .item_info .item_name {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}
.points_container .welfare_box .list_box .list_item .item_info .able_time {
  position: absolute;
  top: 50rpx;
  left: 4rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #939393;
}
.points_container .welfare_box .list_box .list_item .item_info .pic_money {
  position: absolute;
  bottom: 5rpx;
  left: 0;
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
}
.points_container .welfare_box .list_box .list_item .item_info .item_price {
  position: absolute;
  bottom: 10rpx;
  left: 48rpx;
  font-size: 24rpx;
  color: #FF9900;
  font-weight: 700;
}
.points_container .welfare_box .list_box .list_item .item_info button {
  position: absolute;
  bottom: 0;
  right: -5rpx;
  width: 136rpx;
  height: 58rpx;
  line-height: 54rpx;
  color: #fff;
  background: linear-gradient(180deg, #669aff 50%, #0f6fff 100%);
  border-radius: 129rpx;
  font-size: 24rpx;
}
.popup-content {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 538rpx;
  height: 588rpx;
  background: linear-gradient(180deg, #c1e5ff, #ffffff 100%, #ffffff 100%);
  border-radius: 20rpx;
}
.popup-content image {
  display: block;
  width: 156rpx;
  height: 156rpx;
  margin-top: 112rpx;
}
.popup-content text {
  font-size: 36rpx;
  color: #333;
  margin-top: 40rpx;
}
.popup-content button {
  width: 434rpx;
  height: 80rpx;
  background-color: #447cff;
  color: #fff;
  font-size: 32rpx;
  line-height: 80rpx;
  margin-top: 80rpx;
  border-radius: 66rpx;
}