/* 水平间距 */
.points_container {
  background-color: #a6ceff;
}
.points_container .pic_box {
  height: 780rpx;
}
.points_container .pic_box image {
  height: 100%;
}
.points_container .welfare_box {
  position: relative;
  top: -40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #2277ff;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
}
.points_container .welfare_box .blank_mark {
  width: 80rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 49rpx;
}
.points_container .welfare_box .to_get_points {
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  width: 702rpx;
  height: 108rpx;
  background-color: #ffffff;
  padding: 24rpx;
  margin-top: 24rpx;
}
.points_container .welfare_box .to_get_points .blank_bg {
  width: 80rpx;
  height: 80rpx;
  background-color: #24b0ff;
  border-radius: 50%;
}
.points_container .welfare_box .to_get_points .points_num_box {
  margin-left: 16rpx;
}
.points_container .welfare_box .to_get_points .points_num {
  font-size: 56rpx;
  color: #447cff;
  font-weight: 700;
}
.points_container .welfare_box .to_get_points .points_text {
  font-size: 24rpx;
  color: #828282;
}
.points_container .welfare_box .to_get_points button {
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
  width: 172rpx;
  height: 72rpx;
  padding: 0;
  margin: 0;
  background-color: #447cff;
  border-radius: 81rpx;
}
.points_container .welfare_box .to_get_points button image {
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin-left: 12rpx;
  margin-right: 4rpx;
}
.points_container .welfare_box .to_get_points button text {
  display: inline-block;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #fff;
}
.points_container .welfare_box .list_box {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 28rpx 24rpx;
  margin-top: 28rpx;
  border-radius: 24rpx;
}
.points_container .welfare_box .list_box .list_title {
  font-size: 34rpx;
}
.points_container .welfare_box .list_box .list_item {
  width: 100%;
  display: flex;
  margin-top: 32rpx;
}
.points_container .welfare_box .list_box .list_item:nth-child(1) {
  margin-top: 24rpx;
}
.points_container .welfare_box .list_box .list_item .item_money {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 128rpx;
  height: 114rpx;
  background: linear-gradient(90deg, #ff7249, #ffa68b 100%);
  border-radius: 12rpx;
}
.points_container .welfare_box .list_box .list_item .item_money .money_box {
  width: 48rpx;
  height: 67rpx;
}
.points_container .welfare_box .list_box .list_item .item_money .money_box .money_mark {
  font-size: 28rpx;
  color: #8B5121;
}
.points_container .welfare_box .list_box .list_item .item_money .money_box .money_count {
  font-size: 36rpx;
  color: #8B5121;
  font-weight: 700;
}
.points_container .welfare_box .list_box .list_item .item_money .item_name {
  font-size: 24rpx;
  color: #A98854;
}
.points_container .welfare_box .list_box .list_item .item_info {
  position: relative;
}
.points_container .welfare_box .list_box .list_item .item_info .item_price {
  font-size: 28rpx;
}
.points_container .welfare_box .list_box .list_item .item_info .able_time {
  position: absolute;
  top: 43rpx;
  font-size: 24rpx;
  color: #939393;
}
.points_container .welfare_box .list_box .list_item .item_info .item_price {
  font-size: 24rpx;
  color: #FF9900;
  font-weight: 700;
}
.points_container .welfare_box .list_box .list_item .item_info .item_price::before {
  content: "";
  display: block;
  width: 44rpx;
  height: 44rpx;
  background: url(../../images/points/money.png);
}