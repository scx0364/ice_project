/* 水平间距 */
.points_container {
  background-color: #a6ceff;
}
.points_container .pic_box {
  height: 780rpx;
}
.points_container .pic_box image {
  height: 100%;
}
.points_container .welfare_box {
  position: relative;
  top: -40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #2277ff;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
}
.points_container .welfare_box .blank_mark {
  width: 80rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 49rpx;
}
.points_container .welfare_box .to_get_points {
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  width: 702rpx;
  height: 108rpx;
  background-color: #ffffff;
  padding: 24rpx;
  margin-top: 24rpx;
}
.points_container .welfare_box .to_get_points .blank_bg {
  width: 80rpx;
  height: 80rpx;
  background-color: #24b0ff;
  border-radius: 50%;
}
.points_container .welfare_box .to_get_points .points_num_box {
  margin-left: 16rpx;
}
.points_container .welfare_box .to_get_points .points_num {
  font-size: 56rpx;
  color: #447cff;
  font-weight: 700;
}
.points_container .welfare_box .to_get_points .points_text {
  font-size: 24rpx;
  color: #828282;
}
.points_container .welfare_box .to_get_points button {
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
  width: 172rpx;
  height: 72rpx;
  padding: 0;
  margin: 0;
  background-color: #447cff;
  border-radius: 81rpx;
}
.points_container .welfare_box .to_get_points button image {
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin-left: 12rpx;
  margin-right: 4rpx;
}
.points_container .welfare_box .to_get_points button text {
  display: inline-block;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #fff;
}