.tab_nav {
  height: 94rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
}
.tab_nav .nav {
  font-size: 32rpx;
}
.tab_nav .active {
  color: #447cff;
  position: relative;
}
.tab_nav .active::after {
  content: "";
  position: absolute;
  top: 48rpx;
  left: 24rpx;
  width: 48rpx;
  height: 4rpx;
  background-color: #447cff;
  border-radius: 200px;
}
